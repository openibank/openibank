# OpeniBank Environment Configuration
# Copy this file to .env and customize

# ============================================================================
# LLM Provider Selection
# ============================================================================
# Options: ollama, openai_compat, openai, anthropic, gemini, grok, deterministic
OPENIBANK_LLM_PROVIDER=ollama

# ============================================================================
# Ollama (Local - Default)
# ============================================================================
# No API key required!
OPENIBANK_OLLAMA_URL=http://localhost:11434
OPENIBANK_OLLAMA_MODEL=llama3.1:8b

# ============================================================================
# OpenAI-Compatible Local Server (vLLM, llama.cpp, LM Studio)
# ============================================================================
# OPENIBANK_LLM_PROVIDER=openai_compat
# OPENIBANK_OPENAI_COMPAT_BASE_URL=http://localhost:8000/v1
# OPENIBANK_OPENAI_COMPAT_API_KEY=
# OPENIBANK_OPENAI_COMPAT_MODEL=default

# ============================================================================
# OpenAI (Cloud)
# ============================================================================
# OPENIBANK_LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-...
# OPENIBANK_OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# Anthropic Claude (Cloud)
# ============================================================================
# OPENIBANK_LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-...
# OPENIBANK_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# Google Gemini (Cloud) - Coming Soon
# ============================================================================
# OPENIBANK_LLM_PROVIDER=gemini
# GEMINI_API_KEY=...
# OPENIBANK_GEMINI_MODEL=gemini-pro

# ============================================================================
# xAI Grok (Cloud) - Coming Soon
# ============================================================================
# OPENIBANK_LLM_PROVIDER=grok
# XAI_API_KEY=...
# OPENIBANK_GROK_MODEL=grok-1

# ============================================================================
# Issuer Service
# ============================================================================
OPENIBANK_ISSUER_PORT=3000
OPENIBANK_ISSUER_HOST=0.0.0.0

# ============================================================================
# Logging
# ============================================================================
RUST_LOG=info
